#!/usr/bin/env ruby
# frozen_string_literal: true

require "debtective"

user_name =
  if ARGV.include?("--me")
    `git config user.name`.strip
  elsif ARGV.include?("--user")
    ARGV[ARGV.index("--user") + 1]
  end

quiet = ARGV.include?("--quiet")

case ARGV[0]
when "--todos"
  require "debtective/todos/export"
  Debtective::Todos::Export.new(user_name, quiet: quiet).call
when "--offenses"
  require "debtective/offenses/export"
  Debtective::Offenses::Export.new(user_name, quiet: quiet).call
when "--gems"
  puts "Upcoming feature"
else
  puts "Please pass one of this options: [--todos, --offenses, --gems]"
end
